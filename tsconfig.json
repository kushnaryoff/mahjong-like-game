{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@type/*": ["./type/*"],
      "@type": ["./type"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"],
      "@store/*": ["./store/*"],
      "@store": ["./store"]
    }
  },
  "include": ["./src/**/*"]
}
