{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@constants/*": ["./constants/*"],
      "@constants": ["./constants"],
      "@screens/*": ["./screens/*"],
      "@screens": ["./screens"],
      "@layouts/*": ["./layouts/*"],
      "@layouts": ["./layouts"],
      "@interfaces/*": ["./interfaces/*"],
      "@interfaces": ["./interfaces"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"],
      "@store/*": ["./store/*"],
      "@store": ["./store"],
      "@reducers/*": ["./reducers/*"],
      "@reducers": ["./reducers"],
      "@selectors/*": ["./selectors/*"],
      "@selectors": ["./selectors"],
      "@actions/*": ["./actions/*"],
      "@actions": ["./actions"],
      "@sagas/*": ["./sagas/*"],
      "@sagas": ["./sagas"],
      "@styles/*": ["./styles/*"],
      "@styles": ["./styles"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"]
    }
  },
  "include": ["./src/**/*"]
}
